  <script>
     // Basic Mobile Menu Toggle
     const mobileMenuButton = document.getElementById('mobile-menu-button');
     const mobileMenu = document.getElementById('mobile-menu');
     mobileMenuButton.addEventListener('click', () => {
       mobileMenu.classList.toggle('hidden');
     });

    // Tab Switching Logic
    const tabLinks = document.querySelectorAll('.tab-link');
    const tabPanes = document.querySelectorAll('.tab-pane');

    tabLinks.forEach(link => {
      link.addEventListener('click', (event) => {
        event.preventDefault();
        const targetTabId = link.getAttribute('data-tab');

        // Update link styles
        tabLinks.forEach(l => {
          l.classList.remove('border-primary-DEFAULT', 'text-primary-DEFAULT');
          l.classList.add('border-transparent', 'text-gray-400', 'hover:text-gray-200', 'hover:border-gray-500');
        });
        link.classList.add('border-primary-DEFAULT', 'text-primary-DEFAULT');
        link.classList.remove('border-transparent', 'text-gray-400', 'hover:text-gray-200', 'hover:border-gray-500');

        // Update pane visibility
        tabPanes.forEach(pane => {
          if (pane.id === targetTabId) {
            pane.style.display = 'block'; // Or 'flex', 'grid' etc. depending on layout
             pane.classList.add('active');
          } else {
            pane.style.display = 'none';
             pane.classList.remove('active');
          }
        });
      });
    });

    // Activate the default tab's content on load (optional, if not handled by default display style)
    document.addEventListener('DOMContentLoaded', () => {
        // Ensure only the default active tab content is shown initially (for Config section)
        tabPanes.forEach(pane => {
            if (!pane.classList.contains('active')) {
                 pane.style.display = 'none';
            }
        });

        // Hide non-active content sections on initial load
        sections.forEach(section => {
            if (!section.classList.contains('active')) {
                section.style.display = 'none';
            }
        });

        // Initialize Bootstrap components if needed after potential DOM changes by JS
        // Bootstrap Tooltips likely won't work as Bootstrap JS was removed
        /* 
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
          return new bootstrap.Tooltip(tooltipTriggerEl)
        });
        */
    });

    // Also handle nav link active state and section toggling
    const navLinks = document.querySelectorAll('.nav-link');
    const sections = document.querySelectorAll('.content-section');

    navLinks.forEach(link => {
        link.addEventListener('click', (e) => {
            e.preventDefault();
            const targetSectionId = link.getAttribute('data-section');

            // Update nav link active styles
            navLinks.forEach(l => l.classList.remove('active', 'bg-gray-900', 'text-white')); // Example active classes
            link.classList.add('active', 'bg-gray-900', 'text-white'); // Add appropriate active classes

            // Update section visibility
            sections.forEach(section => {
                if (section.id === targetSectionId) {
                    section.style.display = 'block';
                    section.classList.add('active');
                } else {
                    section.style.display = 'none';
                    section.classList.remove('active');
                }
            });
        });
    });

    // --- Vanilla JS for New Task Modal --- 
