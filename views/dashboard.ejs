<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Discord Monitor Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          colors: {
            gray: {
              900: '#111827',
              800: '#1f2937',
              700: '#374151',
              600: '#4b5563',
              500: '#6b7280',
              400: '#9ca3af',
              300: '#d1d5db',
              200: '#e5e7eb',
              100: '#f3f4f6',
            },
            primary: {
              DEFAULT: '#3b82f6', // Blue 500
              hover: '#2563eb', // Blue 600
            },
            success: {
              DEFAULT: '#10b981', // Emerald 500
              hover: '#059669', // Emerald 600
            },
            warning: {
              DEFAULT: '#f59e0b', // Amber 500
              hover: '#d97706', // Amber 600
            },
            danger: {
              DEFAULT: '#ef4444', // Red 500
              hover: '#dc2626', // Red 600
            },
            info: {
              DEFAULT: '#6366f1', // Indigo 500
              hover: '#4f46e5', // Indigo 600
            },
            secondary: {
              DEFAULT: '#6b7280', // Gray 500
              hover: '#4b5563', // Gray 600
            }
          }
        }
      }
    }
  </script>
  <style>
    /* Basic Scrollbar Styling */
    ::-webkit-scrollbar {
      width: 8px;
      height: 8px;
    }
    ::-webkit-scrollbar-track {
      background: #1f2937; /* gray-800 */
    }
    ::-webkit-scrollbar-thumb {
      background-color: #4b5563; /* gray-600 */
      border-radius: 4px;
      border: 2px solid #1f2937; /* gray-800 */
    }
    ::-webkit-scrollbar-thumb:hover {
      background-color: #6b7280; /* gray-500 */
    }

    .health-indicator {
      display: inline-block;
      width: 12px;
      height: 12px;
      border-radius: 50%;
      cursor: help;
    }
    .health-indicator.healthy {
      background-color: #10b981; /* success-DEFAULT */
    }
    .health-indicator.unhealthy {
      background-color: #ef4444; /* danger-DEFAULT */
    }
    /* Ensure modals are visible in dark mode */
    .modal { background-color: rgba(0, 0, 0, 0.5); }
    .modal-content { background-color: #1f2937; } /* gray-800 */
    .modal-header, .modal-footer { border-color: #374151; } /* gray-700 */
  </style>
</head>
<body class="bg-gray-900 text-gray-200">
  <nav class="bg-gray-800 shadow-md">
    <div class="container mx-auto px-4 py-3">
      <div class="flex justify-between items-center">
        <a class="text-xl font-bold text-white" href="/">Discord Monitor Dashboard</a>
        <!-- Mobile menu button (optional, basic implementation) -->
        <button class="md:hidden text-gray-400 hover:text-white focus:outline-none" id="mobile-menu-button">
          <i class="bi bi-list text-2xl"></i>
        </button>
        <div class="hidden md:flex items-center space-x-4" id="desktop-menu">
          <a class="nav-link text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium active" id="tasks-nav" href="#" data-section="tasks-section">Tasks</a>
          <a class="nav-link text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium" id="config-nav" href="#" data-section="config-section">Configuration</a>
        </div>
      </div>
      <!-- Mobile menu (optional, basic implementation) -->
      <div class="md:hidden hidden" id="mobile-menu">
        <div class="pt-2 pb-3 space-y-1">
          <a class="nav-link text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium active" id="mobile-tasks-nav" href="#" data-section="tasks-section">Tasks</a>
          <a class="nav-link text-gray-300 hover:bg-gray-700 hover:text-white block px-3 py-2 rounded-md text-base font-medium" id="mobile-config-nav" href="#" data-section="config-section">Configuration</a>
        </div>
      </div>
    </div>
  </nav>

  <div class="container mx-auto mt-6 px-4">
    <!-- Tasks Section -->
    <section id="tasks-section" class="content-section active mb-8">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-4">
        <h2 class="text-2xl font-semibold text-white mb-3 md:mb-0">Monitoring Tasks</h2>
        <div class="flex items-center space-x-2">
          <button class="btn bg-primary-DEFAULT hover:bg-primary-hover text-white font-bold py-2 px-4 rounded inline-flex items-center" data-bs-toggle="modal" data-bs-target="#newTaskModal">
            <i class="bi bi-plus-circle mr-2"></i> New Task
          </button>
          
          <!-- Mavely Manager Control -->
          <button id="mavelyManagerControlBtn" class="btn bg-info-DEFAULT hover:bg-info-hover text-white font-bold py-2 px-4 rounded inline-flex items-center">
            <i class="bi bi-gear mr-2"></i> Initialize Mavely Manager
          </button>
          
          <!-- BestBuy Manager Control -->
          <button id="bestbuyManagerControlBtn" class="btn bg-info-DEFAULT hover:bg-info-hover text-white font-bold py-2 px-4 rounded inline-flex items-center">
            <i class="bi bi-gear mr-2"></i> Initialize BestBuy Manager
          </button>
          
          <!-- Tweet Processor Status -->
          <div class="flex items-center bg-gray-700 rounded-lg px-3 py-2">
            <div id="tweetProcessorStatus" class="w-3 h-3 rounded-full bg-gray-500 mr-2"></div>
            <span id="tweetProcessorText" class="text-sm text-gray-300">Tweet Processor</span>
          </div>
        </div>
      </div>

      <div class="bg-gray-800 border border-info-DEFAULT/50 text-info-DEFAULT px-4 py-3 rounded relative mb-4" role="alert">
        <i class="bi bi-info-circle mr-2"></i>
        <span class="block sm:inline">Monitor Discord channels and forward messages. Start/stop tasks anytime.</span>
      </div>

      <div class="bg-gray-800 shadow-md rounded-lg overflow-hidden">
        <div class="p-4">
          <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-400" id="tasksTable">
              <thead class="text-xs text-gray-300 uppercase bg-gray-700">
                <tr>
                  <th scope="col" class="px-6 py-3">Label</th>
                  <th scope="col" class="px-6 py-3">Status</th>
                  <th scope="col" class="px-6 py-3">Channel URL</th>
                  <th scope="col" class="px-6 py-3">Target Channels</th>
                  <th scope="col" class="px-6 py-3">Settings</th>
                  <th scope="col" class="px-6 py-3 text-center" id="health-column-header">
                     Health
                    <button id="manual-health-check" class="ml-1 text-gray-400 hover:text-white" title="Run health check now"><i class="bi bi-arrow-clockwise"></i></button>
                  </th>
                  <th scope="col" class="px-6 py-3">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-700">
                <!-- Task rows will be inserted here by JS -->
                <!-- Placeholder for empty state -->
                 <% if (!activeTasks || activeTasks.length === 0) { %>
                   <tr class="bg-gray-800">
                     <td colspan="7" class="px-6 py-4 text-center text-gray-500">No active tasks</td>
                   </tr>
                 <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </section>

    <!-- Configuration Section -->
    <section id="config-section" class="content-section mb-8">
      <h2 class="text-2xl font-semibold text-white mb-4">Configuration</h2>

      <div class="bg-gray-800 border border-info-DEFAULT/50 text-info-DEFAULT px-4 py-3 rounded relative mb-4" role="alert">
        <i class="bi bi-info-circle mr-2"></i>
        <span class="block sm:inline">Configure Discord webhooks, Chrome profiles, and global settings.</span>
      </div>

      <div class="bg-gray-800 shadow-md rounded-lg">
        <!-- Tabs -->
        <div class="border-b border-gray-700">
          <nav class="-mb-px flex space-x-4 px-4" aria-label="Tabs">
            <button class="tab-link whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm border-primary-DEFAULT text-primary-DEFAULT" data-tab="discord-content">
              Discord Webhooks
            </button>
            <button class="tab-link whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm border-transparent text-gray-400 hover:text-gray-200 hover:border-gray-500" data-tab="profiles-content">
              Chrome Profiles
            </button>
            <button class="tab-link whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm border-transparent text-gray-400 hover:text-gray-200 hover:border-gray-500" data-tab="global-settings-content">
              Global Settings
            </button>
          </nav>
        </div>

        <div class="p-4">
          <!-- Discord Webhooks Tab Content -->
          <div class="tab-pane active" id="discord-content">
            <div class="flex justify-between items-center mb-3">
              <h5 class="text-lg font-medium text-white">Discord Webhooks</h5>
              <button class="btn bg-primary-DEFAULT hover:bg-primary-hover text-white font-bold py-1 px-3 rounded text-sm inline-flex items-center" data-bs-toggle="modal" data-bs-target="#newDiscordChannelModal">
                <i class="bi bi-plus-circle mr-1"></i> Add Webhook
              </button>
            </div>
            <p class="text-sm text-gray-400 mb-4">
              <i class="bi bi-info-circle mr-1"></i> Configure webhooks for sending messages. Requires a unique name and URL.
            </p>
            <div class="overflow-x-auto">
              <table class="w-full text-sm text-left text-gray-400" id="discordChannelsTable">
                 <thead class="text-xs text-gray-300 uppercase bg-gray-700">
                  <tr>
                    <th scope="col" class="px-6 py-3">Name</th>
                    <th scope="col" class="px-6 py-3">Label</th>
                    <th scope="col" class="px-6 py-3">Webhook URL (Partial)</th>
                    <th scope="col" class="px-6 py-3">Actions</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-700">
                   <% if (config.discord && config.discord.channels && config.discord.channels.length > 0) { %>
                     <% config.discord.channels.forEach(channel => { %>
                       <tr class="bg-gray-800 hover:bg-gray-700/50">
                         <td class="px-6 py-4 font-medium text-white whitespace-nowrap"><%= channel.name %></td>
                         <td class="px-6 py-4"><%= channel.label || '--' %></td>
                         <td class="px-6 py-4"><%= channel.webhook_url.substring(0, 40) %>...</td>
                         <td class="px-6 py-4">
                           <div class="flex space-x-2">
                             <button class="text-info-DEFAULT hover:text-white edit-discord-channel-btn"
                               data-channel-name="<%= channel.name %>"
                               data-webhook-url="<%= channel.webhook_url %>"
                               data-channel-label="<%= channel.label || '' %>"
                               title="Edit webhook">
                               <i class="bi bi-pencil"></i>
                             </button>
                             <button class="text-danger-DEFAULT hover:text-white delete-discord-channel-btn"
                               data-channel-name="<%= channel.name %>"
                               title="Delete webhook">
                               <i class="bi bi-trash"></i>
                             </button>
                           </div>
                         </td>
                       </tr>
                     <% }); %>
                   <% } else { %>
                     <tr class="bg-gray-800">
                       <td colspan="4" class="px-6 py-4 text-center text-gray-500">No webhooks configured</td>
                     </tr>
                   <% } %>
                </tbody>
              </table>
            </div>
          </div>

          <!-- Chrome Profiles Tab Content -->
          <div class="tab-pane" id="profiles-content" style="display: none;">
             <div class="flex justify-between items-center mb-3">
               <h5 class="text-lg font-medium text-white">Chrome Profiles</h5>
               <button class="btn bg-primary-DEFAULT hover:bg-primary-hover text-white font-bold py-1 px-3 rounded text-sm inline-flex items-center" id="generateProfilesBtn">
                 <i class="bi bi-person-plus mr-1"></i> Generate Profiles
               </button>
             </div>
             <p class="text-sm text-gray-400 mb-4">
               <i class="bi bi-info-circle mr-1"></i> Manage Chrome profiles for running tasks. Profiles store cookies and sessions.
             </p>
             <div class="overflow-x-auto">
               <table class="w-full text-sm text-left text-gray-400" id="profilesTable">
                 <thead class="text-xs text-gray-300 uppercase bg-gray-700">
                  <tr>
                    <th scope="col" class="px-6 py-3">Profile ID</th>
                    <th scope="col" class="px-6 py-3">Status</th>
                    <th scope="col" class="px-6 py-3">Actions</th>
                  </tr>
                </thead>
                 <tbody class="divide-y divide-gray-700">
                   <!-- Profile rows will be inserted here by JS -->
                   <tr class="bg-gray-800">
                     <td colspan="3" class="px-6 py-4 text-center text-gray-500">Loading profiles...</td>
                   </tr>
                 </tbody>
               </table>
             </div>
          </div>

          <!-- Global Settings Tab Content -->
           <div class="tab-pane" id="global-settings-content" style="display: none;">
             <h5 class="text-lg font-medium text-white mb-3">Global Settings</h5>
             <p class="text-sm text-gray-400 mb-4">
               <i class="bi bi-info-circle mr-1"></i> Configure global application settings.
             </p>
             <form id="globalSettingsForm">
               <div class="mb-4">
                 <div class="bg-gray-800 border border-gray-600 rounded-lg p-4">
                   <div class="flex items-center mb-2">
                     <i class="bi bi-info-circle text-blue-400 mr-2"></i>
                     <span class="text-sm font-medium text-gray-300">PM2 Cron Restarts Disabled</span>
                   </div>
                   <p class="text-xs text-gray-400 mb-2">Automatic task restarts have been disabled. Tasks now run continuously without scheduled restarts.</p>
                   <p class="text-xs text-gray-500">To restart tasks manually, use the "Stop" and "Start" buttons in the tasks table.</p>
                 </div>
               </div>
               <!-- Add other global settings fields here -->
               <button type="button" id="saveGlobalSettingsBtn" class="btn bg-success-DEFAULT hover:bg-success-hover text-white font-bold py-2 px-4 rounded inline-flex items-center">
                 <i class="bi bi-save mr-2"></i> Save Global Settings
               </button>
             </form>
           </div>

        </div>
      </div>
    </section>

    <!-- Modals Placeholder -->
    <div id="modal-container">
        <!-- New Task Modal -->
        <div id="newTaskModal" class="modal fixed inset-0 z-50 hidden items-center justify-center overflow-y-auto" aria-labelledby="newTaskModalLabel">
            <div class="modal-overlay fixed inset-0 bg-black opacity-50"></div>
            <div class="modal-content bg-gray-800 rounded-lg shadow-xl w-full max-w-lg mx-auto p-6 z-50">
                <div class="modal-header flex justify-between items-center border-b border-gray-700 pb-3 mb-4">
                    <h5 class="text-xl font-semibold text-white" id="newTaskModalLabel">New Task</h5>
                    <button type="button" class="text-gray-400 hover:text-white" data-bs-dismiss="modal" aria-label="Close">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="newTaskForm">
                        <div class="mb-4">
                            <label for="taskLabel" class="block text-sm font-medium text-gray-300 mb-1">Task Label</label>
                            <input type="text" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-primary-DEFAULT focus:border-primary-DEFAULT block w-full p-2.5" id="taskLabel" placeholder="Enter a descriptive label">
                            <p class="mt-1 text-xs text-gray-500">A descriptive name for this task.</p>
                        </div>
                        <div class="mb-4">
                            <label for="channelUrl" class="block text-sm font-medium text-gray-300 mb-1">Channel URL</label>
                            <input type="text" class="bg-gray-700 border border-gray-600 text-white text-sm rounded-lg focus:ring-primary-DEFAULT focus:border-primary-DEFAULT block w-full p-2.5" id="channelUrl" required>
                            <p class="mt-1 text-xs text-gray-500">The Discord channel URL to monitor.</p>
                        </div>
                        <div class="mb-4">
                            <label class="block text-sm font-medium text-gray-300 mb-1">Target Channels</label>
                            <div class="target-channels-group max-h-40 overflow-y-auto bg-gray-700 border border-gray-600 rounded-lg p-2 space-y-2">
                                <% if (config.discord && config.discord.channels && config.discord.channels.length > 0) { %>
                                    <% config.discord.channels.forEach(channel => { %>
                                        <div class="flex items-center">
                                            <input type="checkbox" class="target-channel-checkbox h-4 w-4 rounded border-gray-500 bg-gray-600 text-primary-DEFAULT focus:ring-primary-DEFAULT" id="channel_<%= channel.name %>" value="<%= channel.name %>">
                                            <label class="ml-2 text-sm text-gray-300" for="channel_<%= channel.name %>"><%= channel.name %></label>
                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    <p class="text-sm text-gray-500">No webhooks configured yet.</p>
                                <% } %>
                            </div>
                            <p class="mt-1 text-xs text-gray-500">Select channels to forward messages to.</p>
                        </div>
                        <!-- Task Settings Section -->
                        <div class="mb-4">
                          <label class="block text-gray-700 text-sm font-bold mb-2">Task Settings</label>
                          <div class="flex flex-wrap gap-4">
                            <!-- URL Unshortening -->
                            <div class="flex items-center">
                              <input type="checkbox" id="enableUrlUnshortening" class="form-checkbox h-4 w-4 text-primary-DEFAULT">
                              <label for="enableUrlUnshortening" class="ml-2 text-sm">Enable URL Unshortening</label>
                            </div>
                            
                            <!-- Regular Messages -->
                            <div class="flex items-center">
                              <input type="checkbox" id="enableRegularMessages" class="form-checkbox h-4 w-4 text-primary-DEFAULT">
                              <label for="enableRegularMessages" class="ml-2 text-sm">Enable Regular Messages</label>
                            </div>
                            
                            <!-- BestBuy Affiliate Links -->
                            <div class="flex items-center">
                              <input type="checkbox" id="enableBestBuyAffiliateLinks" class="form-checkbox h-4 w-4 text-primary-DEFAULT">
                              <label for="enableBestBuyAffiliateLinks" class="ml-2 text-sm">Enable Affiliate Links (via BestBuy)</label>
                            </div>
                            
                            <!-- Tweet Integration -->
                            <div class="flex items-center">
                              <input type="checkbox" id="enableTweeting" class="form-checkbox h-4 w-4 text-primary-DEFAULT">
                              <label for="enableTweeting" class="ml-2 text-sm">Enable Tweet Integration</label>
                            </div>
                          </div>
                        </div>

                        <!-- Tweet Keywords Section (hidden by default) -->
                        <div id="tweetKeywordsSection" class="mb-4 hidden">
                          <label for="tweetKeywords" class="block text-gray-700 text-sm font-bold mb-2">Tweet Keywords</label>
                          <div class="relative">
                            <input type="text" id="tweetKeywords" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="Add keywords (e.g., +ETB, -pokemon)">
                            <div id="tweetKeywordTags" class="flex flex-wrap gap-2 mt-2"></div>
                          </div>
                          <p class="text-sm text-gray-500 mt-1">Use + for required words, - for excluded words. Press Enter to add.</p>
                        </div>
                        
                        <!-- Tweet Timeout Section (hidden by default) -->
                        <div id="tweetTimeoutSection" class="mb-4 hidden">
                          <label for="tweetTimeout" class="block text-gray-700 text-sm font-bold mb-2">Tweet Timeout (minutes)</label>
                          <div class="relative">
                            <input type="number" id="tweetTimeout" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" placeholder="30" min="1" max="1440" value="30">
                          </div>
                          <p class="text-sm text-gray-500 mt-1">Prevent the same product from being tweeted again within this time period.</p>
                        </div>
                        <div class="mb-4 flex items-center">
                            <input type="checkbox" class="h-4 w-4 rounded border-gray-500 bg-gray-600 text-primary-DEFAULT focus:ring-primary-DEFAULT" id="enableHeadless">
                            <label class="ml-2 text-sm font-medium text-gray-300" for="enableHeadless">Headless Mode</label>
                        </div>
                        <div class="mb-4 flex items-center">
                            <input type="checkbox" class="h-4 w-4 rounded border-gray-500 bg-gray-600 text-primary-DEFAULT focus:ring-primary-DEFAULT" id="enableTestingModule">
                            <label class="ml-2 text-sm font-medium text-gray-300" for="enableTestingModule">Testing Mode</label>
                            <p class="mt-1 text-xs text-gray-500 ml-6">Skip sending webhooks if enabled.</p>
                        </div>
                        <div class="mb-4 flex items-center">
                            <input type="checkbox" class="h-4 w-4 rounded border-gray-500 bg-gray-600 text-primary-DEFAULT focus:ring-primary-DEFAULT" id="enableMavelyAffiliateLinks">
                            <label class="ml-2 text-sm font-medium text-gray-300" for="enableMavelyAffiliateLinks">Enable Affiliate Links (via Mavely)</label>
                        </div>
                        <div class="mb-4 flex items-center">
                            <input type="checkbox" class="h-4 w-4 rounded border-gray-500 bg-gray-600 text-primary-DEFAULT focus:ring-primary-DEFAULT" id="disableEmbedWebhook">
                            <label class="ml-2 text-sm font-medium text-gray-300" for="disableEmbedWebhook">Send all as regular message (no embeds)</label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer flex justify-end space-x-2 border-t border-gray-700 pt-4 mt-4">
                    <button type="button" class="btn bg-secondary-DEFAULT hover:bg-secondary-hover text-white font-bold py-2 px-4 rounded text-sm" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn bg-primary-DEFAULT hover:bg-primary-hover text-white font-bold py-2 px-4 rounded text-sm" id="startTaskBtn">Create Task</button>
                </div>
            </div>
        </div>
        <!-- Task Logs Modal -->
        <div id="taskLogsModal" class="modal fixed inset-0 z-50 hidden items-center justify-center overflow-y-auto" aria-labelledby="taskLogsModalLabel">
            <div class="modal-overlay fixed inset-0 bg-black opacity-50"></div>
            <div class="modal-content bg-gray-800 rounded-lg shadow-xl w-full max-w-4xl mx-auto p-0 z-50 flex flex-col" style="height: 80vh;">
                <div class="modal-header flex justify-between items-center border-b border-gray-700 p-4 flex-shrink-0">
                    <h5 class="text-xl font-semibold text-white" id="taskLogsModalLabel">Task Logs</h5>
                    <button type="button" class="text-gray-400 hover:text-white" data-bs-dismiss="modal" aria-label="Close">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
                <div class="modal-body flex-grow overflow-y-auto p-4">
                    <pre id="taskLogsContent" class="text-xs text-gray-300 whitespace-pre-wrap break-words font-mono"></pre>
                </div>
                <div class="modal-footer flex justify-end space-x-2 border-t border-gray-700 p-4 flex-shrink-0">
                    <button type="button" class="btn bg-secondary-DEFAULT hover:bg-secondary-hover text-white font-bold py-2 px-4 rounded text-sm" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn bg-primary-DEFAULT hover:bg-primary-hover text-white font-bold py-2 px-4 rounded text-sm" id="refreshLogsBtn">Refresh</button>
                </div>
            </div>
        </div>
        <!-- Other modals would go here -->
        <!-- Edit Task Modal -->
        <div id="editTaskModal" class="modal fixed inset-0 z-50 hidden items-center justify-center overflow-y-auto" aria-labelledby="editTaskModalLabel">
            <div class="modal-overlay fixed inset-0 bg-black opacity-50"></div>
            <div class="modal-content bg-gray-800 rounded-lg shadow-xl w-full max-w-lg mx-auto p-6 z-50">
                <div class="modal-header flex justify-between items-center border-b border-gray-700 pb-3 mb-4">
                    <h5 class="text-xl font-semibold text-white" id="editTaskModalLabel">Edit Task</h5>
                    <button type="button" class="text-gray-400 hover:text-white close-modal-btn" data-modal-id="editTaskModal" aria-label="Close">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
                <div class="modal-body">
